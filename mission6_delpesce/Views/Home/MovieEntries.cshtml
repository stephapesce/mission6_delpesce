@model List<Movie>

<table class="table table-bordered">
    
    <thead class="fw-bold">

        <tr>
            <td>Category</td>
        
            <td>Movie Title</td>

            <td>Year</td>

            <td>Director</td>

            <td>Rating</td>

            <td>Edited</td>
        
            <td>Lent to</td>

            <td>Copied to plex</td>
        
            <td>Notes</td>
        </tr>

    </thead>


    @foreach (var x in Model)
    {
     <tbody>

         <tr>
            <td>@x.Category?.CategoryName</td>
            <td>@x.Title</td>
            <td>@x.Year</td>
            <td>@x.Director</td>
            <td>@x.Rating</td>
            <td>@x.Edited</td>
            <td>@x.LentTo</td>
            <td>@x.CopiedToPlex</td>
            <td>@x.Notes</td>
            


            <td> <a class="btn btn-light" asp-controller="Home" asp-action="Edit" asp-route-id="@x.MovieId"> Edit</a> </td>
                <td> <a class="btn btn-danger" asp-controller="Home" asp-action="Delete" asp-route-id="@x.MovieId"> Delete</a> </td>


         </tr>

    </tbody>
    } 
    




</tablen>